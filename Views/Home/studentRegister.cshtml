@model OnlineQuizApp.Models.TBL_STUDENT

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>studentRegister</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8">
                <h2>Student Registration</h2>
                <h3 style="color:green">@TempData["msg"]</h3>
                <div class="container">
                    @using (@Html.BeginForm("studentRegister", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label for="name">Student Name:</label>
                            @*<input type="email" class="form-control" id="email" placeholder="Enter email" name="email">*@
                            @Html.TextBoxFor(x => x.S_NAME, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="pwd">Password:</label>
                            @Html.PasswordFor(x => x.S_PASSWORD, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="img">Image:</label>
                            <input type="file" class="form-control btn btn-info" id="imgfile" name="imgfile" />
                        </div>
                        <input type="submit" value="Register Now!" class="btn-success btn-block" />

                    }
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4">

            </div>
        </div>
       
    </div>
</body>
</html>
